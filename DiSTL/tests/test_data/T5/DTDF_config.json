{"config": {"db": "DJWSJ",
            "collections": ["y2017"],
            "pipeline": [{"$limit": 2500},
                         {"$unwind": "$txt"},
                         {"$addFields": {"day-date": {"$dateToString": {"format": "%Y-%m-%d", "date": "$display-date"}}}},
                          {"$group": {"_id": {"display-date": "$day-date",
                                              "txt": "$txt"},
                                      "count": {"$sum": 1}}},
                          {"$addFields": {"display-date": "$_id.display-date"}},
                          {"$group": {"_id": {"display-date": "$display-date"},
                                      "txt": {"$push": {"term": "$_id.txt",
                                                        "count": "$count"}}}}]},
 "doc_type": "dict",
 "DTDFBuilder_kwds": {"stop_words": ["ira", "irs", "bbc"], "stemmer": "lemmatizer",
                      "pre_term_length": 3}}
